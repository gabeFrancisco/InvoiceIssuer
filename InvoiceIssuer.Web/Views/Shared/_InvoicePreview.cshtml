@inject InvoiceIssuer.Services.Sessions.LoginStorage session

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Invoicer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Mono:wght@400;700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/assets/icon.png">
</head>

<body>
    <header>
        <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light invoice-nav shadow mb-3 border-bottom bg-light">
            <div class="text-center">
                @if (@session.GetProvider() != null)
                {
                    <a class="btn btn-dark btn-sm ml-2" asp-action="List" asp-controller="Invoices">Back</a>
                }
                else
                {
                    <a class="btn btn-dark btn-sm ml-2" asp-action="Index" asp-controller="Home">Back</a>
                }
                <button class="btn btn-primary btn-sm ml-2" type='button' onclick="window.print();return false;">
                    Print
                </button>
            </div>
            @if (@session.GetProvider() != null)
            {
                <span class="text-dark">@session.GetProvider().ComercialName</span>
            }
            else
            {
                <span class="text-dark">Welcome visitor!</span>
            }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
