<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="~/css/site.css" rel="stylesheet">
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Source+Code+Pro:wght@400;500;600;700;900&display=swap"
    rel="stylesheet">
  <script src="https://kit.fontawesome.com/f39c6187b7.js" crossorigin="anonymous"></script>
  <title>Invoice Issuer - Dashboard</title>
</head>

<body>
  <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary box-shadow navbar-dashboard">
      <div class="logo">
        <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Invoice Issuer</a>
      </div>
      <div>
        <ul class="navbar-nav flex-grow-1">
          <li class="nav-link text-light">
            @* Welcome @session.GetProvider().ComercialName *@
          </li>
          <li class="nav-item">
            <a id="logout" class="btn btn-danger btn-sm" asp-controller="Dashboard" asp-action="Logout">
              Logout
              <i class="fas fa-sign-out-alt"></i>
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </header>
  <div class="content-wrapper">
    <aside class="sidebar text-light bg-primary">
      <ul>
        <li>
          <i class="fas fa-home fa-fw"></i>
          <a asp-controller="Dashboard" asp-action="Info">Home</a>
        </li>
        <li>
          <i class="fas fa-file-invoice-dollar fa-fw"></i>
          <a asp-controller="Dashboard" asp-action="Invoices">Invoices</a>
        </li>
        <li>
          <i class="fas fa-user-tie fa-fw"></i>
          <a>Customers</a>
        </li>
        <li>
          <i class="fas fa-cog fa-fw"></i>
          <a>Settings</a>
        </li>
      </ul>
    </aside>
    <main class="dashboard-main">
      @RenderBody()
    </main>
  </div>
</body>

</html>