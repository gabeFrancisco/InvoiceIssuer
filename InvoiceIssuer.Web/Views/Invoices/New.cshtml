@model InvoicesViewModel
@{
    Layout = "_Dashboard";
}
<h3 class="text-center mt-3 mb-2">New Invoice</h3>
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#taker" data-toggle="tab" role="tab">Taker</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#invoice" data-toggle="tab" role="tab">Invoice</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#pricing" data-toggle="tab" role="tab">Pricing</a>
    </li>
</ul>
<div class="invoice-form">


    <div class="mt-3">
        <div class="tab-content">
            <form method="POST">
                <div role="tabpanel" class="tab-pane active" id="taker">
                    <h5>Taker Information</h5>
                    <hr>

                    <div class="row">
                        <div class="col-3">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">CI</span>
                                </div>
                                <input type="text" class="form-control" id="ci" asp-for="Provider.CI">
                                <div class="input-group-append">
                                    <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                                </div>

                                <small id="ciHelp" class="form-text text-muted">You can press the "Search" button if
                                    the
                                    taker data is already saved in our database.</small>
                            </div>
                        </div>
                        <div class="col">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Comercial Name</span>
                                </div>
                                <input type="text" class="form-control" id="comercialName"
                                    asp-for="Provider.ComercialName">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Phone</span>
                                </div>
                                <input type="tel" class="form-control" id="phone" asp-for="Provider.Phone">
                            </div>

                        </div>
                        <div class="col">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">E-mail</span>
                                </div>
                                <input type="email" class="form-control" id="providerEmail" asp-for="Provider.Email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Road</span>
                                </div>
                                <input type="text" class="form-control" id="road" asp-for="Address.Road">
                            </div>

                        </div>
                        <div class="col-3">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Number</span>
                                </div>
                                <input type="text" class="form-control" id="roadNumber" asp-for="Address.Number">
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Complement</span>
                                </div>
                                <input type="text" class="form-control" id="complement" asp-for="Address.Complement">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-3">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Block</span>
                                </div>
                                <input type="text" class="form-control" id="block" asp-for="Address.Block">
                            </div>

                        </div>
                        <div class="col-3">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">City</span>
                                </div>
                                <input type="text" class="form-control" id="city" asp-for="Address.City">
                                <small class="form-text text-muted">City is not standardized and you can type any you want.</small>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">State</span>
                                </div>
                                <input type="text" class="form-control" id="state" asp-for="Address.State">
                                <small class="form-text text-muted">Same as above, you can type any state of your country.</small>
                            </div>
                        </div>

                        <div class="col-3">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Postal Code</span>
                                </div>
                                <input type="text" class="form-control" id="postalCode" asp-for="Address.PostalCode">
                            </div>
                        </div>
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane active" id="invoice">
                    <h5 class="mt-3">Invoice Information</h5>
                    <hr>
                    <div class="row">
                        <div class="col">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Title</span>
                                </div>
                                <input type="text" class="form-control" id="comercialName">
                            </div>
                        </div>
                        <div class="col-5">
                            <select class="form-select" id="exampleSelect1">
                                @foreach (var serviceType in Model.ServiceTypes)
                                {
                                    <option id="serviceType" asp-for="ServiceType">@serviceType.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="input-group mb-4">
                                <div class="input-group">
                                    <span class="input-group-text">Description</span>
                                </div>
                                <textarea class="form-control" id="description" asp-for="Description"
                                    rows="7"></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane active" id="pricing">
                    <h5>Pricing</h5>

                    <div class="row">
                        <div class="col-4">
                            <div class="input-group input-group-sm mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">Price</span>
                                </div>
                                <input type="text" class="form-control" id="price" asp-for="Price">
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-4">
                        <button class="btn btn-lg btn-primary" type="submit"><b>Issue!</b></button>
                    </div>
            </form>
        </div>
    </div>
</div>