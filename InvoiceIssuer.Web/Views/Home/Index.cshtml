@model LoginViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
           
            @if(ViewBag.Error != null){
                <div class="alert alert-danger text-center p-2 mt-2">
                    @ViewBag.Error
                </div>
            }

             @if(TempData["Logout"] != null){ 
                <div class="modal" id="modal" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Logout</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>@TempData["Logout"]</p>
                        </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        </div>
                        </div>
                    </div>
                </div>
            }

            <div class="border card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Login</h5>
                    <form class="form-signin" method="POST">
                        <div class="form-label-group">
                            <label class="mb-2 mt-2" for="inputCI">CI Number</label>
                            <input type="text" id="inputCI" class="form-control" placeholder="Company Identifier" asp-for="CI"
                                maxlength="7" minlength="7" required autofocus>
                        </div>
                        <div class="form-label-group">
                            <label class="mb-2 mt-2" for="inputPassword">Password</label>
                            <input type="password" id="inputPassword" class="form-control" placeholder="******" asp-for="Password"
                                minlength="6" required>
                        </div>

                        @* <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                            <label class="custom-control-label" for="customCheck1">Remember password</label> 
                        </div> *@
                        <button class="btn btn-primary btn-block mt-2" type="submit">Sign in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
